<p id="notice"><%= notice %></p>

<div class="row">
  <% @posts.each do |post| %>
    <div class="col-lg-4">
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <div class="row">
              <div class="col-7">
                <%= image_tag post.image.to_s, class: 'image' %>
              </div>            
               <br>
               <br>
              <div class="col-5">
<br>
                <h4><%= post.title %></h4>
                <div class="card-text"><%= post.content.truncate(150) %></div>
                <br />
                <small class="float-right text-muted"><%= post.created_at.strftime("%Y-%m-%d") %></small>
                </br>
                <%= link_to '', post %>
              </div>
            </div>
          </div>
        </div>
    </div>
  <% end %>
</div>