<style>
  .thumbnail{
    position:relative;
    width:100%;
    height:0;
    padding-top:56%;
  }
  .thumbnail img{
      position:absolute;
      top:0;
      left:0;
      width:100%;
      height:100%;
  }
</style>

<p id="notice"><%= notice %></p>

<div class="row">
  <% @posts.each do |post| %>
    <% if post.public == false or current_user %>
      <div class="col-lg-6">
        <div class="card shadow-sm">
          <div class="card-body">
            <div class="row">
              <div class="col-7">
                <div class="thumbnail">
                  <%= image_tag post.image.to_s, class: 'image' %>
                </div>
              </div>
              <div class="col-5">
                <h4><%= post.title %></h4>
                <% if post.public == false %>
                  <p>非公開</p>
                <% end %>
                <div class="card-text text-muted"><%= post.content.truncate(150) %></div>
                <div>
                  <small class="text-muted"><%= post.created_at.strftime("%Y-%m-%d") %></small>
                </div>
              </div>
            </div>
          </div>
          <%= link_to '', post %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<br>
<% if current_user %>
  <%= link_to 'New Post', new_post_path %>
<% end %>